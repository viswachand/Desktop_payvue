{
  "name": "payvue-pos",
  "version": "1.0.0",
  "main": "dist/main.js",
  "description": "PayVue POS Desktop App",
  "author": "Viswachand Reddy",
  "private": true,

  "scripts": {
    "dev": "tsc -w & cross-env NODE_ENV=development electron .",
    "build": "tsc -p tsconfig.json",
    "build:assets": "npm --prefix ../frontend install && npm --prefix ../frontend run build && npm --prefix ../backend install && npm --prefix ../backend run build && npm --prefix ../backend prune --omit=dev",
    "dist": "npm run build:assets && npm run build && electron-builder --mac --win --x64",
    "dist:mac": "rm -rf ../release && npm run build:assets && npm run build && electron-builder --mac",
    "dist:win": "rm -rf ../release && npm run build:assets && npm run build && electron-builder --win --x64",
    "package:all": "rm -rf ../release && npm run dist"
  },

  "dependencies": {
    "dotenv": "^17.2.3"
  },

  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "cross-env": "^7.0.3",
    "electron": "^32.0.2",
    "electron-builder": "^26.0.12"
  },

  "build": {
    "appId": "com.payvue.pos",
    "productName": "PayVue POS",

    "files": [
      "dist/**/*",
      "package.json"
    ],

    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/dist",
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/.env",
        "to": "backend/.env",
        "filter": ["**/.env"]
      },
      {
        "from": "../backend/node_modules",
        "to": "backend/node_modules",
        "filter": ["**/*"]
      }
    ],

    "asarUnpack": [],

    "directories": {
      "output": "../release"
    },

    "mac": {
      "category": "public.app-category.business",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns"
    },

    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    }
  }
}
