{
  "name": "payvue-pos",
  "version": "1.0.0",
  "main": "dist/main.js",
  "description": "PayVue POS Desktop App",
  "author": "Viswachand Reddy",
  "private": true,

  "scripts": {
    "dev": "tsc -w & cross-env NODE_ENV=development electron .",
    "build": "tsc -p tsconfig.json",
    "dist": "npm run build && electron-builder",
    "package:all": "rm -rf ../release && cd ../frontend && npm run build && cd ../backend && npm run build && cd ../app &&  npm run dist"
  },

  "dependencies": {
    "dotenv": "^17.2.3"
  },

  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "cross-env": "^7.0.3",
    "electron": "^32.0.2",
    "electron-builder": "^26.0.12"
  },

  "build": {
    "appId": "com.payvue.pos",
    "productName": "PayVue POS",

    "files": [
      "dist/**/*",
      "package.json"
    ],

    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend"
      },
      {
        "from": "../backend/.env",
        "to": "backend/.env"
      },
      {
        "from": "../frontend/dist",
        "to": "frontend"
      }
    ],

    "asarUnpack": [
      "backend/**"
    ],

    "directories": {
      "output": "../release"
    },

    "mac": {
      "category": "public.app-category.business",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns"
    },

    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    }
  }
}
