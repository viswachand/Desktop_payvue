{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "electron"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["main.ts", "preload.ts"]
}
